rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Public read for all files (portfolio images, etc.)
      allow read: if true;
      // Write requires authentication.
      // NOTE: For true Admin-only upload, implement Firebase Custom Claims
      // via Cloud Functions and check: request.auth.token.admin == true
      // For now, this restricts to authenticated users only.
      allow write: if request.auth != null;
    }
  }
}
